<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box">

    <ImageView
        android:id="@+id/btnStep1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/box"
        android:src="@drawable/ic_circle_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2" />

    <ImageView
        android:id="@+id/btnStep2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/box"
        android:src="@drawable/ic_circle_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnStep1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2" />

    <ImageView
        android:id="@+id/btnStep3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/box"
        android:src="@drawable/ic_circle_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnStep2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2" />

    <ImageView
        android:id="@+id/btnStep4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/box"
        android:src="@drawable/ic_circle_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnStep3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnStep4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2">

        <ImageView
            android:id="@+id/clue1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_circle_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".45"/>
        <ImageView
            android:id="@+id/clue2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_circle_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clue1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".45" />

        <ImageView
            android:id="@+id/clue3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_circle_grey"
            app:layout_constraintTop_toBottomOf="@+id/clue1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".45"/>

        <ImageView
            android:id="@+id/clue4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_circle_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clue2"
            app:layout_constraintStart_toEndOf="@+id/clue3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".45" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>